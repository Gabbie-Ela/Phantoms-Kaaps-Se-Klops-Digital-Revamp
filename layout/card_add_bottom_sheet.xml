<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardAddSheetRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/title_cardAddBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add card"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <!-- Holder name -->
    <EditText
        android:id="@+id/nameEt_cardAddBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Card holder name"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

    <!-- Card number -->
    <EditText
        android:id="@+id/cardNumber_cardAddBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:hint="Card number"
        android:inputType="number"
        android:maxLength="19"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

    <!-- Row: Expiry + CVV -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/exp_cardAddBottomSheet"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="MM/YY"
            android:inputType="text"
            android:maxLength="5"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <Space
            android:layout_width="12dp"
            android:layout_height="48dp" />

        <EditText
            android:id="@+id/cvv_cardAddBottomSheet"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="CVV"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />
    </LinearLayout>

    <Button
        android:id="@+id/addCardBtn_cardAddBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Add card" />
</LinearLayout>
