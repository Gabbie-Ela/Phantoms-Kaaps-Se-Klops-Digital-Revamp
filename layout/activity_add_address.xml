<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleTv"
            android:text="Add Address"
            android:textSize="20sp"
            android:textColor="@color/mainText"
            android:fontFamily="@font/metropolis_semibold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/fullNameEt"
            android:hint="Full name"
            android:inputType="textPersonName"
            android:background="@drawable/edit_text_bg"
            android:textColor="@color/mainText"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/phoneEt"
            android:hint="Phone (e.g. +27...)"
            android:inputType="phone"
            android:background="@drawable/edit_text_bg"
            android:textColor="@color/mainText"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/line1Et"
            android:hint="Address line 1"
            android:background="@drawable/edit_text_bg"
            android:textColor="@color/mainText"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/line2Et"
            android:hint="Address line 2 (optional)"
            android:background="@drawable/edit_text_bg"
            android:textColor="@color/mainText"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/cityEt"
            android:hint="City"
            android:background="@drawable/edit_text_bg"
            android:textColor="@color/mainText"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/regionEt"
            android:hint="Province/Region"
            android:background="@drawable/edit_text_bg"
            android:textColor="@color/mainText"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/postalEt"
            android:hint="Postal code"
            android:inputType="number"
            android:background="@drawable/edit_text_bg"
            android:textColor="@color/mainText"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <CheckBox
            android:id="@+id/defaultCb"
            android:text="Use as default shipping address"
            android:textColor="@color/mainText"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/saveBtn"
            android:text="Save"
            android:background="@drawable/btn_bg"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
